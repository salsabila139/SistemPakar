<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BantuanActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14.0dip"
            android:gravity="center"
            android:text="Bantuan Cara Menggunakan Apikasi"
            android:textColor="#000"
            android:textSize="20.0dip"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:layout_marginBottom="10.0dip"
                android:background="@color/green"
                android:clickable="false"
                android:text="MENU DIAGNOSA "
                android:textColor="@android:color/black"
                android:textSize="18.0dip" />

            <ImageView
                android:id="@+id/img1"
                android:layout_width="100.0dip"
                android:layout_height="100.0dip"
                android:layout_below="@id/btn1"
                android:layout_marginStart="5.0dip"
                android:layout_marginTop="5.0dip"
                android:layout_marginEnd="5.0dip"
                android:layout_marginBottom="5.0dip"
                android:src="@drawable/diagnosa" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/img1"
                android:layout_marginStart="5.0dip"
                android:layout_marginEnd="10.0dip"
                android:layout_toEndOf="@id/img1"
                android:gravity="center_vertical"
                android:text="Digunakan untuk melakukan diagnosa untuk memilih gejala yang sedang kamu alami sekarang dan menekan tombol untuk melihat hasil diagnosamu."
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:layout_marginBottom="10.0dip"
                android:background="@color/green"
                android:clickable="false"
                android:text="Menu Data Gejala"
                android:textColor="@android:color/black"
                android:textSize="18.0dip" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="98dp"
                android:layout_height="86dp"
                android:layout_below="@id/btn2"
                android:layout_marginStart="5.0dip"
                android:layout_marginTop="5.0dip"
                android:layout_marginEnd="5.0dip"
                android:layout_marginBottom="5.0dip"
                android:src="@drawable/data_gejala" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/img2"
                android:layout_marginStart="5.0dip"
                android:layout_marginEnd="10.0dip"
                android:layout_toEndOf="@id/img2"
                android:gravity="center_vertical"
                android:text="Di menu bagian ini dapat kita ketahui bahwa di bagian ini kita dapat melihat semua data gejala yang sedang kita alami saat ini. "
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:layout_marginBottom="10.0dip"
                android:background="@color/green"
                android:clickable="false"
                android:text="Menu Innforamsi"
                android:textColor="@android:color/black"
                android:textSize="18.0dip" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="117dp"
                android:layout_height="108dp"
                android:layout_below="@id/btn3"
                android:layout_marginStart="5.0dip"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5.0dip"
                android:layout_marginBottom="5.0dip"
                android:src="@drawable/informasi" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/img3"
                android:layout_marginStart="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10.0dip"
                android:layout_toEndOf="@id/img3"
                android:gravity="center_vertical"
                android:text="Di menu bagian ini bersisi mengenai penjelasan secara umum mengenai tentang Vaksin Booster Moderna."
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="262dp">

            <ImageView
                android:id="@+id/btn_home"
                android:layout_width="145dp"
                android:layout_height="108dp"
                android:layout_marginStart="100.0dip"
                android:onClick="pindahTong"
                android:src="@drawable/back"
                tools:ignore="OnClick" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>